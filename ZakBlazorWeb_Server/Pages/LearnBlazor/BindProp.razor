@page "/LearnBlazor/BindProp"
<h2 class="text-success">Individual Product</h2>
<div class="row">
    <div class="col-4 border p-3">
        Item choose :
        <select @bind="propID">
            @foreach (var pr in product.Productpropreities)
            {
                <option value="@pr.Id"> @pr.Id </option>
            }
        </select>
        <br />
        Key choose:
        @if (@propID != 0)
        {
            @product.Productpropreities.FirstOrDefault(t=>t.Id==@propID).Key;
        }
        else
        {
            <p>NULL</p>
        }
        <br />
        Value choose:
        @if (@propID != 0)
        {
            @product.Productpropreities.FirstOrDefault(t=>t.Id==@propID).Value;            
        }
        else
        {
            <p>NULL</p>
        }
    </div>
    <div class="col-4 border p-3">

        <h3 class="text-primary">Product Summary</h3>
        <hr />
        Id : @product.Id <br />
        Active : @product.IsActive <br />
        Name : @product.Name <br />
        Price : @product.Price <br />

        This Product is : @(@product.IsActive ? "Active":"Inactive") <br />


        Product Selected : @prop <br />
        Property Value :
        @if (!String.IsNullOrWhiteSpace(@prop))
        {
            @product.Productpropreities.FirstOrDefault(l => l.Key==@prop).Value;            
        }
    </div>

    <div class="col-4 border p-3">
        <h3 class="text-primary">Product Playground</h3>
        <hr />
        <div>
            Active : <input type="checkbox" @bind="@product.IsActive" @bind:event="oninput" /> <br />
        </div>
        <div>
            Price : <input type="number" @bind-value="@product.Price" @bind-value:event="oninput" /> <br />
        </div>

        <div>
            product Properties :
            <select @bind="prop">
                @foreach (var p in product.Productpropreities)
                {
                    <option value="@p.Key"> @p.Key </option>
                }
            </select>
        </div>


        @*Price : <input @bind="@product.Price" @bind:event="oninput"/> <br />*@
    </div>
</div>
@code {
    private int propID;
    private string prop = "";
    Demo_Product product = new()
        {
            Id = 1,
            Name = "Allo",
            Price = 10.99,
            IsActive = true,
            Productpropreities = new List<Demo_ProductProp>()
        {
            new Demo_ProductProp { Id=1, Key="Color", Value="Black" },
            new Demo_ProductProp { Id=2, Key="Flavor", Value="Mint" },
            new Demo_ProductProp { Id=3, Key="Size", Value="20oz" },
        }
        };










}
